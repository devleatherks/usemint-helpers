{
    "compilerOptions": {
        "target": "es2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "./**/*",
    ],
    "exclude": [
        "node_modules",
        "src/templates",
        "**/*.spec.ts",
        "src/dist"
    ]
}