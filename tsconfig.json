{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "src/templates",
        "**/*.spec.ts",
        "src/dist"
    ]
}